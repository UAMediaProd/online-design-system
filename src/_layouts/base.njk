<body>
<aside class="sidebar">

	{# home navigation? #}

	<a href="/pages/home/" class="nav-link"><h3 class="home-link"><img src="/assets/images/half-shield.svg" width="30" style="float:left; padding: 10px;"> Online Design System</h3></a>

	<h4>Quality Framework</h4>
	<ul>
		{% for qf in collections.qf %}
 			<li class="{{ 'active' if qf.url in page.url }}"><a href="{{ qf.url | url }}" class="nav-link">{{ qf.data.title }}</a></li>
 		{% endfor %}
	</ul>
	<h4>Learning Design</h4>
	<ul>
		{% for ld in collections.ld %}
 			<li class="{{ 'active' if ld.url in page.url }}"><a href="{{ ld.url | url }}" class="nav-link">{{ ld.data.title }}</a></li>
 		{% endfor %}
	</ul>
	<h4>Media Production</h4>
	<ul>
		{% for media in collections.media %}
 			<li class="{{ 'active' if media.url in page.url }}"><a href="{{ media.url | url }}" class="nav-link">{{ media.data.title }}</a></li>
 		{% endfor %}
	</ul>
	<h4>Course Development</h4>
	<ul>
		{% for style in collections.style %}
 			<li class="{{ 'active' if style.url in page.url }}"><a href="{{ style.url | url }}" class="nav-link">{{ style.data.title }}</a></li>
 		{% endfor %}
	</ul>
</aside>

	{{ content | safe }} 

</body>
</html>
